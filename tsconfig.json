{
    "compilerOptions": {
        "declaration": true, // Generate .d.ts files
        "emitDeclarationOnly": true, // Only output declaration files
        "outDir": "dist", // Output directory
        "jsx": "react-jsx", // For React 17+
        "moduleResolution": "node",
        "lib": ["dom", "esnext"], // Add DOM types
        "target": "es2022",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src/**/*.ts", "./index.d.ts"],
    "exclude": ["node_modules", "dist"]
}
